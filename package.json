{
  "name": "recruitment-api",
  "version": "1.0.0",
  "description": "Recruitment API with Node.js and TypeScript",
  "main": "dist/app.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx -r tsconfig-paths/register src/app.ts",
    "dev:staging": "cross-env NODE_ENV=staging tsx -r tsconfig-paths/register src/app.ts",
    "dev:production": "cross-env NODE_ENV=production tsx -r tsconfig-paths/register src/app.ts",
    "start": "cross-env NODE_ENV=production node -r tsconfig-paths/register dist/app.js",
    "start:dev": "cross-env NODE_ENV=development node -r tsconfig-paths/register dist/app.js",
    "start:staging": "cross-env NODE_ENV=staging node -r tsconfig-paths/register dist/app.js",
    "start:production": "cross-env NODE_ENV=production node -r tsconfig-paths/register dist/app.js",
    "build:dev": "cross-env NODE_ENV=development tsc",
    "build:staging": "cross-env NODE_ENV=staging tsc",
    "build:production": "cross-env NODE_ENV=production tsc",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "seed": "cross-env NODE_ENV=development tsx -r tsconfig-paths/register src/db/seeds/run-seeds.ts",
    "seed:status": "npm run seed -- --status",
    "seed:rollback": "npm run seed -- --rollback"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "inversify": "^7.7.1",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.11.4",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.7.2",
    "winston": "^3.10.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.19.10",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.1.6"
  }
}
